{
  "name": "as-covers",
  "version": "0.0.1",
  "description": "Code coverage transform for AssemblyScript",
  "main": "index.js",
  "scripts": {
    "postinstall": "lerna bootstrap",
    "test": "run-s build:src build:test run:test",
    "build:src": "lerna run tsc",
    "build:test": "asc ./tests/test.ts --lib packages/assembly/index.ts --transform ./packages/transform/src/index.ts --textFile ./tests/output/output.wat -o ./tests/output/output.wasm --explicitStart --exportRuntime",
    "run:test": "node tests/test"
  },
  "author": "Joshua Tenner <tenner.joshua@gmail.com>",
  "contributors": [
    "Jairus Tanaka <jairus.v.tanaka@outlook.com>"
  ],
  "license": "MIT",
  "devDependencies": {
    "@assemblyscript/loader": "^0.19.3",
    "assemblyscript": "^0.19.3",
    "blessed": "^0.1.81",
    "colors": "^1.4.0",
    "lerna": "^4.0.0",
    "line-column": "^1.0.2",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4",
    "visitor-as": "^0.6.0"
  },
  "dependencies": {
    "@types/chalk": "^2.2.0",
    "@types/node": "^15.12.3",
    "@types/text-table": "^0.2.1",
    "chalk": "^4.1.1",
    "micromatch": "^4.0.4",
    "table": "^6.7.1",
    "yaml": "^1.10.2"
  }
}
