{
  "name": "as-covers",
  "version": "0.0.1",
  "description": "Code coverage transform for AssemblyScript",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "postinstall": "lerna bootstrap",
    "test": "run-s build:src build:test run:test",
    "build:src": "lerna run tsc",
    "build:test": "asc ./tests/test.ts --lib packages/assembly/index.ts --transform ./packages/transform/lib/index.js --textFile ./tests/output/output.wat --outFile ./tests/output/output.wasm --exportRuntime",
    "run:test": "node --enable-source-maps tests/test"
  },
  "author": "Joshua Tenner <tenner.joshua@gmail.com>",
  "contributors": [
    "Jairus Tanaka <jairus.v.tanaka@outlook.com>"
  ],
  "license": "MIT",
  "devDependencies": {
    "@assemblyscript/loader": "^0.20.19",
    "assemblyscript": "^0.20.19",
    "blessed": "^0.1.81",
    "colors": "^1.4.0",
    "lerna": "^5.4.3",
    "line-column": "^1.0.2",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@types/chalk": "^2.2.0",
    "@types/node": "^18.7.6",
    "@types/text-table": "^0.2.2",
    "chalk": "^5.0.1",
    "micromatch": "^4.0.5",
    "table": "^6.8.0",
    "yaml": "^2.1.1"
  }
}
